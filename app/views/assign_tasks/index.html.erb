<h1>Assigned Tasks</h1>
 
<table class="table table-striped">
  <tr>
    <th>User Name</th>
    <th>Project Name</th>
    <th>Task</th>
    <th colspan="3"></th>
  </tr>

  <% @assign_task.each do |a| %>
    <tr>
      <td><%= a.user.email %></td>
      <td><%= a.project.project_name %></td>
      <td><%= a.task.task_name %></td>
      


    </tr>
  <% end %>
</table>

<%= link_to 'Back', user_projects_path %>


