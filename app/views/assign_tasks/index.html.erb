<h3>Project: <b><%= @project.project_name %></b></h3>
<h3>User: <b><%= @user.email %></b></h3>


<h1><b>Assigned Tasks</b></h1>
 
<table class="table table-striped">
  <tr>
    <th>Task</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>

  <% @assign_tasks.each do |a| %>
    <tr>
      
      <td><%= a.task.task_name %></td>
      <td>
          <% if a.completed %>
            completed
          <% else %>
            inprocess
          <% end %>  
      </td>
      <td><%= link_to 'Remove', assign_task_path(a), data: {method: :delete, confirm: "Are you sure to unassign this task?"} %></td>
      


    </tr>
  <% end %>
</table>

<%= link_to 'Back', user_projects_path %>

