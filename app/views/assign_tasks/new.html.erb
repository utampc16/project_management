<p>
  <strong>User_name:</strong>
  <%= @user.email%>
</p>
 
<p>
  <strong>Project_name:</strong>
  <%= @project.project_name %>
</p>

<h2>Tasks</h2>

<% if @assign_task.errors.any? %>
  <ul>
    <% @assign_task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with scope: :Assign_task, url: assign_tasks_path,  local: true do |f| %>  

  <p>
    <%= f.label :task_id %><br>
	  <%= f.collection_select :task_id,  @project.tasks,:id,:task_name, include_blank: true %>
    <%= f.hidden_field :user_id, :value => @user.id%>
    <%= f.hidden_field :project_id, :value => @project.id%>

  </p>

  <p>
	  <%= f.submit %>
  </p>
 
<% end %>

<%= link_to 'Back', user_projects_path %>