<h1>Listing Meetings</h1>
 
<table class="table table-striped">
  <tr>
    <th>Purpose</th>
    <th>Date</th>
    <th>Time</th>
    <th colspan="3"></th>
  </tr>
 
  <% @meeting.each do |m| %>
    <tr>
      <td><%= m.purpose %></td>
      <td><%= m.date %></td>
      <td><%= m.time %></td>
    <% if current_user.project_manager %>  
      <td><%= link_to 'Edit', edit_meeting_path(m) %></td>
      <td><%= link_to 'Destroy', meeting_path(m), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    <% else %>
    <% end %>

    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %> 

