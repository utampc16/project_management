<p>
  <h3>Project_name: <b><%= @project.project_name %></b></h3>
</p>

<table class="table table-striped">
  <tr>
    <th><h2><b>Issues</b></h2></th>
    <th colspan="3"></th>
  </tr>

  <% @project.issues.each do |a| %>
    <tr>
      <td><%= a.Issue %></td>
      <td><%= link_to 'Destroy', project_project_issue_path(@project, a.id), method: :delete %></td>
    

    </tr>
  <% end %>
</table>

<h2>Add an Issue:</h2>
<%= form_with scope: :issue, url: project_project_issues_path,  local: true do |form| %>  
  <p>
    <%= form.label :issue %><br>
    <%= form.text_field :Issue %>
    <%= form.hidden_field :project_id, :value => @project.id%>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Back', projects_path %>