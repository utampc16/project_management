<h2>New Project</h2>

<%= form_with scope: :project, url: projects_path,  local: true do |form| %>  <p>
    <%= form.label :project_name %><br>
    <%= form.text_field :project_name %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p> 
 
  <p>
    <%= form.label :techonology %><br>
    <%= form.collection_select :technology_id, Technology.order(:technology_name),:id,:technology_name, include_blank: true %>
  </p>

  <p>
    <%= form.label :start_date %><br>
    <%#= form.text_area :start_date %>
    <%= form.text_field :start_date ,:id=>'datepicker1'%>
  </p>
 

 <p>
    <%= form.label :end_date %><br>
   <%= form.text_field :end_date ,:id=>'datepicker'%>
  </p>
 

 <p>
    <%= form.label :project_cost %><br>
    <%= form.text_field :project_cost %>
  </p>
 

 
  <p>
    <%= form.submit :class=>"btn btn-primary" %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>



<script type="text/javascript">
  $(document).ready(function(){
    $('#datepicker').datepicker();
    $('#datepicker1').datepicker();
  });
</script>